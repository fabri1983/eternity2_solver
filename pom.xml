<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.fabri1983.eternity2</groupId>
	<artifactId>solver</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Eternity 2 Solver</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<external.libs.dir>${project.basedir}/external-libs</external.libs.dir>
		<skipTests>true</skipTests>
		<skip.proguard>false</skip.proguard>
	</properties>

	<dependencies>
		<!-- The jsr166 dependency is only used when compiling for java 1.6 and 
			executed under Oracle's Jrockit JVM -->
		<dependency>
			<groupId>jsr</groupId>
			<artifactId>jsr166</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/jsr166.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.sun.mail</groupId>
			<artifactId>javax.mail</artifactId>
			<version>1.4.5</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/javamail-1.4.5/mail.jar</systemPath>
		</dependency>
		<!-- dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1.1</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/javamail-1.4.5/mail.jar</systemPath>
		</dependency -->
		<dependency>
			<groupId>mpje</groupId>
			<artifactId>mpi</artifactId>
			<version>0.44</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/mpj-v0_44/lib/mpi.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>mpje</groupId>
			<artifactId>mpiExp</artifactId>
			<version>0.44</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/mpj-v0_44/lib/mpiExp.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>mpje</groupId>
			<artifactId>mpj</artifactId>
			<version>0.44</version>
			<scope>system</scope>
			<systemPath>${external.libs.dir}/mpj-v0_44/lib/mpj.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>net.sf.proguard</groupId>
			<artifactId>proguard-base</artifactId>
			<version>5.2</version>
			<scope>runtime</scope>
        </dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>java7</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<final.jar.name>e2solver</final.jar.name>
				<source.version>1.7</source.version>
				<compiler.version>1.7</compiler.version>
				<manifest.main.class>org.fabri1983.eternity2.forkjoin_solver.MainFaster</manifest.main.class>
			</properties>
		</profile>
		<profile>
			<id>java8</id>
			<properties>
				<final.jar.name>e2solver</final.jar.name>
				<source.version>1.7</source.version>
				<compiler.version>1.8</compiler.version>
				<manifest.main.class>org.fabri1983.eternity2.forkjoin_solver.MainFaster</manifest.main.class>
			</properties>
		</profile>
		<profile>
			<id>jrockit</id>
			<properties>
				<final.jar.name>e2solver_jrockit</final.jar.name>
				<source.version>1.6</source.version>
				<compiler.version>1.6</compiler.version>
				<manifest.main.class>org.fabri1983.eternity2.forkjoin_solver.MainFaster</manifest.main.class>
			</properties>
		</profile>
		<profile>
			<id>mpje</id>
			<properties>
				<final.jar.name>e2solver_mpje</final.jar.name>
				<source.version>1.7</source.version>
				<compiler.version>1.8</compiler.version>
				<manifest.main.class>org.fabri1983.eternity2.mpje_solver.MainFasterMPJE</manifest.main.class>
			</properties>
		</profile>
	</profiles>

	<build>
		<finalName>${final.jar.name}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>${source.version}</source>
					<target>${compiler.version}</target>
					<encoding>UTF-8</encoding>
					<compilerArgs>
						<arg>-O</arg>
						<arg>-g:none</arg>
					</compilerArgs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<inherited>false</inherited>
				<version>1.7</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target name="copy-external-libs">
								<copy todir="${project.build.directory}/lib">
									<fileset dir="${external.libs.dir}">
										<include name="**/*" />
									</fileset>
								</copy>
								<chmod perm="u+rwx" type="file">
									<fileset dir="${project.build.directory}/lib/mpj-v0_44/bin">
										<include name="*" />
										<exclude name="*.bat" />
									</fileset>
								</chmod>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
					<skipTests>${skipTests}</skipTests>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>package</phase>
					</execution>
				</executions>
				<configuration>
					<finalName>${final.jar.name}</finalName>
					<addMavenDescriptor>false</addMavenDescriptor>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>false</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
							<mainClass>${manifest.main.class}</mainClass>
						</manifest>
					</archive>
					<classesDirectory>${project.build.outputDirectory}</classesDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.wvengen</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<version>2.0.10</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>proguard</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<skip>${skip.proguard}</skip>
					<proguardInclude>proguard.conf</proguardInclude>
					<injar>${project.build.finalName}.jar</injar>
                    <outjar>${project.build.finalName}.jar</outjar>
                    <outputDirectory>${project.build.directory}</outputDirectory>
					<obfuscate>true</obfuscate>
					<addMavenDescriptor>false</addMavenDescriptor>
					<options>
						<option>-target ${compiler.version}</option>
					</options>
					<libs>
						<!-- List external jars your application depends on (that not listed in 
							maven dependencies). You probably depend on jave runtime (rt.jar). JCE stands 
							for Java Cryptography Extension. You probably don't need it, but my application 
							does. -->
						<lib>${java.home}/lib/rt.jar</lib>
						<lib>${java.home}/lib/jsse.jar</lib>
						<lib>${project.build.directory}/lib/jsr166.jar</lib>
						<lib>${project.build.directory}/lib/javamail-1.4.5/mail.jar</lib>
						<lib>${project.build.directory}/lib/mpj-v0_44/lib/mpi.jar</lib>
						<lib>${project.build.directory}/lib/mpj-v0_44/lib/mpiExp.jar</lib>
						<lib>${project.build.directory}/lib/mpj-v0_44/lib/mpj.jar</lib>
					</libs>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>